{
  "name": "content-loader",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:lib": "ng build @ngneat/content-loader --configuration production",
    "build:integration:prod": "ng build --configuration production",
    "hooks:pre-commit": "node hooks/pre-commit.js",
    "release": "cd projects/ngneat/content-loader && standard-version --infile ../../../CHANGELOG.md",
    "commit": "git-cz",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors init",
    "postinstall": "ngcc"
  },
  "dependencies": {
    "@angular/animations": "^12.0.0",
    "@angular/common": "^12.0.0",
    "@angular/compiler": "^12.0.0",
    "@angular/core": "^12.0.0",
    "@angular/forms": "^12.0.0",
    "@angular/platform-browser": "^12.0.0",
    "@angular/platform-browser-dynamic": "^12.0.0",
    "@angular/router": "^12.0.0",
    "rxjs": "^6.6.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^12.0.0",
    "@angular/cli": "^12.0.0",
    "@angular/compiler-cli": "^12.0.0",
    "@angular/language-service": "^12.0.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^14.14.20",
    "all-contributors-cli": "^6.19.0",
    "codelyzer": "^6.0.1",
    "git-cz": "^4.7.6",
    "husky": "^4.3.7",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "^2.1.1",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "^10.5.3",
    "ng-packagr": "^12.0.0",
    "prettier": "^2.2.1",
    "protractor": "^7.0.0",
    "standard-version": "^9.1.0",
    "tsickle": "^0.39.1",
    "tslib": "^2.2.0",
    "tslint": "~6.1.2",
    "typescript": "~4.2.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "npm run hooks:pre-commit && lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,less,md,ts,html,component.html}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": []
}
